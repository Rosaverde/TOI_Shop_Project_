@page
@model Shop.UI.Pages.Customer.IndexModel
@{
}


<div class="container">
    <div class="columns">
        <div class="column is-10 ">
            @foreach (var order in Model.Order)
            {


            <div class="card">

                <div class="card-content">

                    <p class="title">Order ID: @order.Id - Status: @order.Status</p>

                    @foreach (var product in order.Products)
                    {
                <table class="table">
                    <tr>
                        <td>

                            <figure class="image is-32x32">
                                <img src="~/images/258097012-1518655510.jpg" />
                            </figure>
                        </td>

                        <td>

                            <p class="subtitle">Name: @product.Name - Qty: @product.Qty</p>
                        </td>

                    </tr>
                </table>
                    }

                </div>
                </div>
            }

        </div>
    </div>
</div>