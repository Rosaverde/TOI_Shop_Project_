@page


<div id="app" class="conatiner">

    <div v-if="!editing">
        <button class="button is-success" @@click="newProduct">Add New Product</button>
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Product</th>
                <th>Value</th>
            </tr>
            <tr v-for="(product, index) in products">
                <td>{{product.id}} </td>
                <td>{{product.name}}</td>
                <td>{{product.value}}</td>
                <td><figure class="image is-32x32">
    <img src="~/images/258097012-1518655510.jpg" />
</figure></td>
                <td><a class="button is-warning" @@click="editProduct(product.id, index)">Edit</a></td>
                <td>
                    <a class="button is-danger" @@click="deleteProduct(product.id, index)">Remove</a>
                </td>
            </tr>
        </table>
    </div>

    <div v-else>
        <div class="field">
            <label class="label">Product Name</label>
            <div class="control">
                <input class="input" v-model="productModel.name" />

            </div>
        </div>
        <div class="field">
            <label class="label">Product Description</label>

            <div class="control">
                <input class="input" v-model="productModel.description" />

            </div>
        </div>
        <div class="field">
            <label class="label">Value</label>
            <div class="control">
                <input class="input" v-model.number="productModel.value" />

            </div>
        </div>
        <button class="button is-success" @@click="createProduct" v-if="!productModel.id">Create Product</button>
        <button class="button is-warning" @@click="updateProduct" v-else>Update Product</button>
        <button class="button" @@click="cancel">Cancel</button>

    </div>

</div>

@section scripts{ 

<script src="~/js/Admin/products.js"></script>

}